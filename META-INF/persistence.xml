      <class>com.employeetracker.EmployeeTrackerAPI.models.NextOfKin</class>
      <class>com.employeetracker.EmployeeTrackerAPI.models.Notices</class>
      <class>com.employeetracker.EmployeeTrackerAPI.models.Role</class>
      <class>com.employeetracker.EmployeeTrackerAPI.models.SpouseDetails</class>
      <class>com.employeetracker.EmployeeTrackerAPI.models.Task</class>
      <class>com.employeetracker.EmployeeTrackerAPI.models.TaskImportance</class>
      <class>com.employeetracker.EmployeeTrackerAPI.models.TaskRequestAction</class>
      <class>com.employeetracker.EmployeeTrackerAPI.models.TaskRequestStatus</class>
      <class>com.employeetracker.EmployeeTrackerAPI.models.TaskRequests</class>
      <class>com.employeetracker.EmployeeTrackerAPI.models.User</class>
      <class>com.employeetracker.EmployeeTrackerAPI.models.UserRole</class>
      <class>com.employeetracker.EmployeeTrackerAPI.models.TaskStatus</class>
      <properties>
          <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/employee_tracker"/>
          <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
      </properties>
  </persistence-unit>
</persistence>
