      <class>com.employeetracker.EmployeeTrackerAPI.models.AuditTrail</class>
      <class>com.employeetracker.EmployeeTrackerAPI.models.BusinessUnit</class>
      <class>com.employeetracker.EmployeeTrackerAPI.models.DelegationOfDuty</class>
      <class>com.employeetracker.EmployeeTrackerAPI.models.Department</class>
      <class>com.employeetracker.EmployeeTrackerAPI.models.Employee</class>
      <class>com.employeetracker.EmployeeTrackerAPI.models.EmployeeStatus</class>
